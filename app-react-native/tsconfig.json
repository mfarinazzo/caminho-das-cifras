{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": [
        "src/core/*"
      ],
      "@data/*": [
        "src/data/*"
      ],
      "@presentation/*": [
        "src/presentation/*"
      ],
      "@infrastructure/*": [
        "src/infrastructure/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ],
      "@assets/*": [
        "assets/*"
      ]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "jsx": "react-native",
    "lib": [
      "ESNext"
    ],
    "target": "ESNext",
    "module": "ESNext"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
